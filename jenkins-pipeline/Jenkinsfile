#!/usr/bin/env groovy

pipeline {
    agent any
    environment {
        AWS_DEFAULT_REGION = 'us-east-1'
        AWS_ACCESS_KEY_ID = credentials('AWS_ACCESS_KEY_ID')
        AWS_SECRET_ACCESS_KEY = credentials('AWS_SECRET_ACCESS_KEY')
    }
    stages {
        stage('Build') {
            steps {
                sh 'echo "Building..."'
            }
        }

        stage("Create EKS Infrastructure") {
            steps {
                script {
                    dir ('jenkins-pipeline/aws') {
                        sh 'terraform init'
                        sh 'terraform apply -auto-approve'
                    }
                }
            }
        }

        stage("Install Ingress Controller from Kubectl") {
            steps {
                script {
                    dir ('jenkins-pipeline/k8s') {
                        sh "aws eks update-kubeconfig --name tuyojr-eks-EVLKQ4RR"
                        sh 'kubectl apply -k "github.com/aws/eks-charts/stable/aws-load-balancer-controller//crds?ref=master"'
                    }
                }
            }
        }

        stage("Install AWS LoadBalancer using Helm") {
            steps {
                script {
                    dir ('jenkins-pipeline/k8s') {
                        sh "aws eks update-kubeconfig --name tuyojr-eks-EVLKQ4RR"
                        sh 'helm repo add eks https://aws.github.io/eks-charts'
                        sh 'helm upgrade -i -n ingress-aws --create-namespace ingress-aws aws/aws-load-balancer-controller -f aws-loadbalancer.yml --version 1.4.3'
                    }
                }
            }
        }

        stage("Deploy notes-app to the cluster") {
            steps {
                script {
                    dir ('jenkins-pipeline/k8s') {
                        sh "aws eks update-kubeconfig --name tuyojr-eks-EVLKQ4RR"
                        sh 'kubectl apply -f notes-app.yml'
                    }
                }
            }
        }

        stage("Setup Weave Works addon for Sock-Shop App") {
            steps {
                script {
                    dir ('jenkins-pipeline/k8s') {
                        sh "aws eks update-kubeconfig --name tuyojr-eks-EVLKQ4RR"
                        sh 'kubectl apply -f https://github.com/weaveworks/weave/releases/download/v2.8.1/weave-daemonset-k8s.yaml'
                    }
                }
            }
        }

        stage("Deploy Sock-Shop App") {
            steps {
                script {
                    dir ('jenkins-pipeline/k8s') {
                        sh "aws eks update-kubeconfig --name tuyojr-eks-EVLKQ4RR"
                        sh 'kubectl delete -f sock-shop.yml'
                    }
                }
            }
        }

        stage("Create Monitoring Tools") {
            steps {
                script {
                    dir ('jenkins-pipeline') {
                        sh "aws eks update-kubeconfig --name tuyojr-eks-EVLKQ4RR"
                        sh 'kubectl apply -f manifests-monitoring/'
                    }
                }
            }
        }

        stage("Create Ingress") {
            steps {
                script {
                    dir ('jenkins-pipeline/k8s') {
                        sh "aws eks update-kubeconfig --name tuyojr-eks-EVLKQ4RR"
                        sh 'kubectl apply -f ingress.yml'
                    }
                }
            }
        }
    }
}